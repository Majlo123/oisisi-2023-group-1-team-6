<Window
    x:Class="GUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Click="Delete_Click" Header="Delete" />
                <MenuItem Click="Add_Click_Professor" Header="Add professor" />
                <MenuItem Click="Add_Click_Student" Header="Add subject" />
                <MenuItem Click="UpdateProfesor_Click" Header="Update professor" />
            </MenuItem>
        </Menu>


        <TabControl>
            <TabItem Header="Professors">
                <DataGrid
                    x:Name="ProfessorsDataGrid"
                    Width="895"
                    Height="350"
                    HorizontalAlignment="Center"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding Professors, UpdateSourceTrigger=PropertyChanged}"
                    RenderTransformOrigin="0.548,0.506"
                    SelectedItem="{Binding SelectedProfessor, UpdateSourceTrigger=PropertyChanged}"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Surname}"
                            Header="Name" />
                        <DataGridTextColumn
                            Width="250"
                            Binding="{Binding Name}"
                            Header="Surname" />
                        <DataGridTextColumn
                            Width="300"
                            Binding="{Binding Email}"
                            Header="Email" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Title}"
                            Header="Title" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Students">
                <DataGrid
                    x:Name="StudentsDataGrid"
                    Height="350"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding Students, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding SelectedStudent, UpdateSourceTrigger=PropertyChanged}"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding Index}"
                            Header="Index" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Name}"
                            Header="Name" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Email}"
                            Header="Surname" />
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding YearOfStudy}"
                            Header="Year of study" />
                        <DataGridTextColumn
                            Width="100"
                            Binding="{Binding Status}"
                            Header="Status(B or S)" />
                        <DataGridTextColumn
                            Width="300"
                            Binding="{Binding Average}"
                            Header="Average grade" />
                    </DataGrid.Columns>
                </DataGrid>

            </TabItem>
            <TabItem Header="Subjects">
                <DataGrid
                    x:Name="SubjectsDataGrid"
                    Width="895"
                    Height="350"
                    HorizontalAlignment="Center"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding Subjects, UpdateSourceTrigger=PropertyChanged}"
                    RenderTransformOrigin="0.548,0.506"
                    SelectedItem="{Binding SelectedSubject, UpdateSourceTrigger=PropertyChanged}"
                    SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="150"
                            Binding="{Binding SubjectId}"
                            Header="Subject Id" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding SubjectName}"
                            Header="Subject Name" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding EspbPoints}"
                            Header="Espb Points" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding YearOfStudy}"
                            Header="Year" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Semester}"
                            Header="Semester" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </DockPanel>


</Window>
