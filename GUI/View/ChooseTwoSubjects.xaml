<Window
    x:Class="GUI.View.ChooseTwoSubjects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GUI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChooseTwoSubjects"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Label
            Width="92"
            Height="30"
            Margin="38,78,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Subject 1:" />
        <TextBox
            x:Name="subjectNumberOne_textbox"
            Width="122"
            Height="30"
            Margin="135,78,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Button
            x:Name="AddOne"
            Width="18"
            Height="21"
            Margin="284,83,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="AddSubjectOne_Click"
            Content="+"
            IsDefault="True" />
        <Label
            Width="92"
            Margin="38,133,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Subject 2:" />
        <TextBox
            x:Name="subjectNumberTwo_textbox"
            Width="120"
            Height="26"
            Margin="137,133,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <Button
            x:Name="AddTwo"
            Width="18"
            Height="21"
            Margin="284,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="AddSubjectTwo_Click"
            Content="+" />
        <Button
            Width="215"
            Height="25"
            Margin="419,79,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ListeningTogetherButton_Click"
            Content="Listening together"
            RenderTransformOrigin="0.505,0.563" />
        <Button
            Width="215"
            Height="25"
            Margin="419,131,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="PassedFailedButton_Click"
            Content="Passed/Failed"
            RenderTransformOrigin="0.505,0.563" />
        <Button
            x:Name="DeleteOne"
            Width="18"
            Height="21"
            Margin="321,83,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="DeleteSubjectOne_Click"
            Content="-"
            IsDefault="False" />
        <Button
            x:Name="DeleteTwo"
            Width="18"
            Height="21"
            Margin="321,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="DeleteSubjectTwo_Click"
            Content="-"
            IsDefault="False" />

    </Grid>
</Window>
